<h1 class="mt-4">Clubs</h1>
<% if current_user.has_no_clubs %>
  <p class="lead">Join a club to get started with Birdr</p>
<% end %>

<div class="mt-4 mb-4">
  <% @clubs.each do |club| %>
    <div class="card mb-2">
      <div class="card-body">
        <h4 class="card-title"><%= link_to club.display_name, club %></h4>
        <% if club.has_short_name %>
          <h6 class="card-subtitle mb-2 text-muted"><%= club.name %></h6>
        <% end %>
        <p class="card-text"><%= club.description %></p>
        <a href="#" class="btn btn-primary">Join</a>
      </div>
    </div>
  <% end %>
</div>

<%= button_to "Create a Club", new_club_path, method: :get, class: "btn btn-outline-primary" %>
