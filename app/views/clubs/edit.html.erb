<%= render 'header' %>
<%= render 'nav' %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-3">
      <h4>Basic info</h3>
      <p>This is the information fellow Birdrs will see when they find your club.</p>
    </div>
    <div class="col-md-6">
      <%= simple_form_for(@club) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :short_name %>
          <%= f.input :description %>
        </div>

        <div class="form-actions">
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <hr class="my-4"/>
  <div class="row">
    <div class="col-md-3">
      <h4>Images</h3>
      <p>Customise your club page's images</p>
    </div>
    <div class="col-md-6">
      <%= simple_form_for(@club) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :cover_image %>
        </div>

        <div class="form-actions">
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
