<% content_for :js do %>
  <%= javascript_include_tag :photos %>
<% end %>

<div class="page-header">
  <div class="container">
    <h5 class="mb-0">Upload photos</h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <button class="btn btn-primary" data-toggle="modal" data-target="#birdRecordModal">Upload</button>
    </div>
  </div>
</div>

<div class="modal fade" id="birdRecordModal" tabindex="-1" role="dialog" aria-labelledby="birdRecordModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="birdRecordModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', photo: @photo %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
        <button id="modalUpdate" type="button" class="btn btn-primary">Update</button>
      </div>
    </div>
  </div>
</div>

