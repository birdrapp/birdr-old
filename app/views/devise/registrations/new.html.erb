<div class="row justify-content-center">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-row">
        <div class="form-group col-md">
          <%= f.label :first_name %>
          <%= f.input_field :first_name, placeholder: 'Bob', autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group col-md">
          <%= f.label :last_name %>
          <%= f.input_field :last_name, placeholder: 'Falcon', class: 'form-control' %>
        </div>
      </div>
      <%= f.input :email, placeholder: 'bob.falcon@birdr.co.uk' %>
      <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit, "Create Account" %>
    <% end %>
  </div>
</div>
