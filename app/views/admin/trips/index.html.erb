<div class="page-header">
  <div class="container">
    <h5 class="mb-0">Trips</h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Date</th>
            <th>Location</th>
            <th>User</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @trips.each do |trip| %>
            <tr>
              <td><%= trip.date %></td>
              <td><%= trip.location %></td>
              <td><%= trip.user %></td>
              <td class="text-right">
              <%= link_to 'Show', [:admin ,trip], class: 'text-dark' %> |
              <%= link_to 'Edit', [:edit, :admin ,trip], class: 'text-dark' %> |
              <%= link_to 'Destroy', [:admin ,trip], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= paginate @trips %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Create New Trip', new_admin_trip_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
