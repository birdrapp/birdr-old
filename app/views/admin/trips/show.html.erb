<div class="page-header">
  <div class="container">
    <h5 class="mb-0"><%= @trip %></h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9"><%= @trip.date %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9"><%= @trip.location %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9"><%= link_to @trip.user, [:admin, @trip.user] %></dd>
      </dl>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= link_to 'Edit', [:edit, :admin, @trip], class: 'btn btn-outline-dark' %>
      <%= link_to 'Destroy', [:admin, @trip], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>



