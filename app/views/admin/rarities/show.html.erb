<div class="page-header">
  <div class="container">
    <h5 class="mb-0"><%= @rarity %></h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9"><%= @rarity.name %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Level</dt>
        <dd class="col-sm-9"><%= @rarity.level %></dd>
      </dl>
          </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= link_to 'Edit', [:edit, :admin, @rarity], class: 'btn btn-outline-dark' %>
      <%= link_to 'Destroy', [:admin, @rarity], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>



