<%= page_header "Rarities" %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Level</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @rarities.each do |rarity| %>
            <tr>
              <td><%= rarity.name %></td>
              <td><%= rarity.level %></td>
              <td class="text-right">
              <%= link_to 'Show', [:admin, rarity], class: 'text-dark' %> |
              <%= link_to 'Edit', [:edit, :admin, rarity], class: 'text-dark' %> |
              <%= link_to 'Destroy', [:admin, rarity], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= paginate @rarities %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Create New Rarity', new_admin_rarity_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
