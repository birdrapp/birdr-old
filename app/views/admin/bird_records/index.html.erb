<div class="page-header">
  <div class="container">
    <h5 class="mb-0">Bird Records</h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Bird</th>
            <th>Birding Session</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @bird_records.each do |bird_record| %>
            <tr>
              <td><%= bird_record.bird %></td>
              <td><%= bird_record.birding_session %></td>
              <td class="text-right">
              <%= link_to 'Show', [:admin, bird_record], class: 'text-dark' %> |
              <%= link_to 'Edit', edit_admin_bird_record_path(bird_record), class: 'text-dark' %> |
              <%= link_to 'Destroy', [:admin, bird_record], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= paginate @bird_records %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Create New Bird Record', new_admin_bird_record_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
