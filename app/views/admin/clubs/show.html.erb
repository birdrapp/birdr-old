<div class="page-header">
  <div class="container">
    <h5 class="mb-0"><%= @club %></h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9"><%= @club.name %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Short name</dt>
        <dd class="col-sm-9"><%= @club.short_name %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9"><%= @club.description %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Cover image</dt>
        <dd class="col-sm-9"><%= image_tag @club.cover_image, width: 200 %></dd>
      </dl>
      <dl class="row">
        <dt class="col-sm-3">Logo</dt>
        <dd class="col-sm-9"><%= image_tag @club.logo, width: 200 %></dd>
      </dl>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= link_to 'Edit', [:edit, :admin, @club], class: 'btn btn-outline-dark' %>
      <%= link_to 'Destroy', [:admin, @club], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>



